<Window x:Class="MAL_Synchronizer.View.MergedListsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAL_Synchronizer.View"
        xmlns:my="clr-namespace:MAL_Synchronizer.Model"
        mc:Ignorable="d"
        Title="MAL Synchronizer - Anime to add" MinHeight="300" Height="600" MinWidth="600" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="21px"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="2" x:Name="listBoxMerged" ItemTemplate="{StaticResource animeList}" Mouse.MouseUp="listBoxMerged_MouseUp"/>
        <TextBlock Grid.Row="1" Padding="2" x:Name="tbMergedListCount"/>
    </Grid>
</Window>
